{% extends 'base.html.twig' %}

{% block title %}New Users{% endblock %}

{% block body %}
    <div class='container'>
        <div class='row mt-4 mb-5 d-flex justify-content-around'>
            <div class='col-10 col-sm-5 m-3'>
            
                <form action="{{ path('login') }}" method="post" class="border p-4 border-dark rounded">
                <h4 class='mb-3'>Login :</h4>
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input class='form-control' type="text" id="username" name="_username"/>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class='form-control' type="password" id="password" name="_password" />
                </div>
                    <button class="btn btn-success mt-4" type="submit">Login</button>
                </form>
            </div>
            <div class='col-10 col-sm-5 m-3'>
                <div class="border p-4 border-dark rounded">
                    <h4 class='mb-3'>Sign up :</h4>
                    {{ include('users/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}